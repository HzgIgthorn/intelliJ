<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date [%thread] [%-5level] %logger{40} - %message%n</pattern>
        </encoder>
    </appender>
    <logger name="acadamy.learnprogramming" level="ALL"/>
    <logger name="org.springframework" level="ALL"/>
    <logger name="academy.learnprogramming.controller.DemoController" level="ALL"/>

    <root level="ALL">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>